<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_margin="@dimen/card_margin"
    app:strokeWidth="@dimen/number_shape_stroke_width"
    app:strokeColor="?attr/colorPrimary"
    app:cardCornerRadius="@dimen/number_shape_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="@dimen/number_min_width"
        android:paddingStart="@dimen/default_padding"
        android:paddingEnd="@dimen/default_padding"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/numberAndSeries"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginBottom="@dimen/default_padding"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
            app:autoSizeTextType="uniform"
            android:lines="1"
            android:textIsSelectable="true"
            android:selectAllOnFocus="true"
            android:textStyle="bold"
            tools:text="A000AA" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="@dimen/number_shape_stroke_width"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/default_inner_margin"
            android:layout_marginEnd="@dimen/default_inner_margin"
            app:dividerColor="?attr/colorPrimary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginBottom="@dimen/default_padding"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/regionCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                app:autoSizeTextType="uniform"
                android:lines="1"
                android:textIsSelectable="true"
                android:selectAllOnFocus="true"
                android:textStyle="bold"
                tools:text="77" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/countryShort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:gravity="center_horizontal|bottom"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:lines="1"
                android:textIsSelectable="true"
                android:selectAllOnFocus="true"
                android:textStyle="bold"
                android:textAlignment="center"
                tools:text="RUS" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
